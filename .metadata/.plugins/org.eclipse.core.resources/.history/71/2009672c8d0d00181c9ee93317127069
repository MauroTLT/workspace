package unidad8.practica5;

public class ExcepcionesKms {
	private String mensaje;
	public String getMensaje() {
		return mensaje;
	}
	public void setMensaje(String mensaje) {
		this.mensaje = mensaje;
	}
	public int getKmsAntes() {
		return kmsAntes;
	}
	public void setKmsAntes(int kmsAntes) {
		this.kmsAntes = kmsAntes;
	}
	private int kmsAntes;
	
	public ExcepcionesKms(int x){
		this.kmsAntes = x;
	}
	public String toString(int kmsAntes) {
		mensaje = "Kilometraje menor a " + kmsAntes;
		return "Error del tipo: " + mensaje;
	}
}
