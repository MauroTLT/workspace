package View;

import java.awt.BorderLayout;
import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.SwingConstants;

@SuppressWarnings("serial")
public class DadoVista extends JDialog implements Runnable {
	
	private Thread hilo;
	private JLabel img;
	
	public DadoVista() {
		this.hilo = new Thread(this);
		this.img = new JLabel("", SwingConstants.CENTER);
		darFormato();
	}

	private void darFormato() {
		JLabel background = new JLabel();
		Image bg = new ImageIcon(getClass().getResource("../resources/extras/frame.png")).getImage();
		background.setIcon(new ImageIcon(bg.getScaledInstance(200, 200, Image.SCALE_SMOOTH)));
		this.setContentPane(background);
		this.setLayout(new BorderLayout());
		this.add(img, BorderLayout.CENTER);

		this.setSize(200, 200);
		this.setLocationRelativeTo(null);
		this.setResizable(false);
		this.setAlwaysOnTop(true);
		this.setDefaultCloseOperation(JDialog.HIDE_ON_CLOSE);
		this.setUndecorated(true);
		this.setVisible(false);
	}
	
	@Override
	public void setVisible(boolean b) {
		if(b) {
			hilo.start();
		} else {
			hilo = new Thread(this);
		}
		super.setVisible(b);
	}
	
	@Override
	public void run() {
		try {Thread.sleep(1000);} catch (InterruptedException e1) {}
		this.setVisible(false);	
	}

	public JLabel getImg() {
		return img;
	}

	public void setImg(JLabel img) {
		this.img = img;
	}
	
}
