package Model;

public class Protagonista extends Personaje {
	
	private static String nombre;
	
	public Protagonista() {
		super("../resources/sprites/maxim.png", 1, 1, 0, 10, 1);
		Protagonista.setNombre("Inutil");
	}

	public static String getNombre() {
		return nombre;
	}

	public static void setNombre(String nombre) {
		Protagonista.nombre = nombre;
	}

	public int calcularTotal() {
		int resultado = 0;
		try {
			resultado += this.getOro() * 50;
			resultado += this.getFuerza() * 10;
			resultado += this.getVelocidad() * 10;
			resultado += this.getEnergia() * 10;
			resultado += this.getSabiduria() * 20;
		} catch (ArithmeticException e) {
			System.out.println("Error al hacer el calculo del total");
		}
		return resultado;
	}
	
}
