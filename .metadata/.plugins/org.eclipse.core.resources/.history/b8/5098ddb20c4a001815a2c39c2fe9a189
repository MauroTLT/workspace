package Controller;

import java.awt.event.WindowEvent;
import java.awt.event.WindowListener;

import Model.Casilla;
import View.BatallaView;

public class BatallaController implements WindowListener {
	
	private Casilla casilla;
	private BatallaView ventana;

	public BatallaController(Casilla casilla) {
		this.casilla = casilla;
		this.ventana = new BatallaView(this.casilla);
		try {
			Thread.sleep(5000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		while(casilla.getPersonajes()[0].getEnergia() > 0 && casilla.getPersonajes()[1].getEnergia() > 0) {
			this.ventana.setVisible(true);
			ventana.lanzar();
			this.ventana.setVisible(false);
			
		}
		
	}

	public BatallaView getVentana() {
		return ventana;
	}

	public void setVentana(BatallaView ventana) {
		this.ventana = ventana;
	}

	@Override
	public void windowActivated(WindowEvent arg0) {
		
		
	}

	@Override
	public void windowClosed(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowClosing(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowDeactivated(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowDeiconified(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowIconified(WindowEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowOpened(WindowEvent arg0) {
		
		
	}
	
}
