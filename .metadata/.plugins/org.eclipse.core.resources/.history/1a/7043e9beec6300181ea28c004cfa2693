package enemigo;

import java.awt.Color;
import java.awt.GridLayout;
import java.awt.Image;

import javax.swing.BorderFactory;
import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;

@SuppressWarnings("serial")
public class View extends JFrame {
	
	private Modelo modelo;
	private JLabel[][] casillas;
	private JLabel bg;
	
	public View(Modelo modelo) {
		this.modelo = modelo;
		this.casillas = new JLabel[10][10];
		this.bg = new JLabel();
		darFormato();
	}

	private void darFormato() {
		this.bg.setIcon(new ImageIcon(getClass().getResource("../resources/bg2.jpg")));
		this.setContentPane(bg);
		this.setLayout(new GridLayout(10, 10));
		pintar();
		
		this.setSize(750, 750);
		this.setTitle("Prueba");
		this.setLocationRelativeTo(null);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setVisible(true);
	}

	public void pintar() {
		for (int i = 0; i < casillas.length; i++) {
			for (int j = 0; j < casillas[i].length; j++) {
				JLabel label = new JLabel();
				if (this.modelo.getTablero()[i][j].getEnemy() != null) {
					label.setBackground(Color.RED);
				} else if (this.modelo.getTablero()[i][j].getPer() != null) {
					label.setBackground(Color.BLUE);
				} else {
					label.setBackground(Color.YELLOW);
				}
				label.setOpaque(true);
				label.setBorder(BorderFactory.createLineBorder(Color.BLACK));
				this.casillas[i][j] = label;
				this.add(label);
			}
		}
		
	}
}
