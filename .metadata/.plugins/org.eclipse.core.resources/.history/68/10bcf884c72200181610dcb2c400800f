package ejercicio6;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;


@SuppressWarnings("serial")
public class Menu extends JFrame {
	private MouseListener mouseListener;
	private JMenuBar menu;
	private JMenu cuenta;
	private JMenu operar;
	private JMenu lista;
	private JMenu salir;
	private JMenuItem comprar;
	private JMenuItem vender;
	
	public Menu() {
		this.menu = new JMenuBar();
		this.cuenta = new JMenu();
		this.operar = new JMenu();
		this.lista = new JMenu();
		this.salir = new JMenu();
		this.comprar = new JMenuItem();
		this.vender = new JMenuItem();
		darFormato();
	}

	private void darFormato() {
		this.operar.add(comprar);
		this.operar.add(vender);
		this.menu.add(cuenta);
		this.menu.add(operar);
		this.menu.add(lista);
		this.menu.add(salir);
	}
	
	public static void main(String[] args) {
		Menu frame = new Menu();
		frame.setSize(310, 160);
		frame.setTitle("Menu");
		frame.setLocationRelativeTo(null);
		frame.setVisible(true);
	}

}
