package Model;
/*
 * Clase Singleton, solo usada para especificar que va a ocurrir un combate y calcular los daños
 */
public class Combate extends Evento {
	
	private static Combate combateSingleton = new Combate();
	
	public static Combate getInstance() {
		if (combateSingleton == null) {
			combateSingleton = new Combate();
		}
		return combateSingleton;
	}
	/**
	 * 
	 * @param dados -> Los 3 dados lanzados
	 * @param personaje -> Personaje que ataca en este momento (Prota o enemigo)
	 * @return resultado -> Calculo del daño provocado
	 */
	public int danio(int[] dados, Personaje personaje) { //(18 × 1.5) × 0.75 + (18 × 1.5) × 0.25 maximo teorico daño enemigo
		int sumaDados = dados[0] + dados[1] + dados[2];
		double resultado = 0;
		resultado = sumaDados * (personaje.getFuerza())*0.75;
		resultado += sumaDados * (personaje.getSabiduria())*0.25;
		return (int) resultado;
	}
}
