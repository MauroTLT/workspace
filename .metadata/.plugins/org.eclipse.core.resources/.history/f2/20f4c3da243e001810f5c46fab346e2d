package FireEmblemGraphic;

import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JOptionPane;

public class DialogoController implements MouseListener {
	private DialogoView ventana;
	private TableroModel modelo;
	
	public DialogoController(JButton[][] pane, TableroModel modelo) {
		this.ventana = new DialogoView(pane);
		this.modelo = modelo;
		setActions();
	}
	
	private void setActions() {
		for(int i = 0; i < 48; i++) {
			this.ventana.getPane().getComponent(i).addMouseListener(this);
		}
	}
	public void resetActions() {
		for(int i = 0; i < 48; i++) {
			this.ventana.getPane().getComponent(i).addMouseListener(null);
		}
		
	}

	@Override
	public void mouseClicked(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mousePressed(MouseEvent e) {
		JLabel casilla = (JLabel) e.getSource();
		
		for (int i = 0; i < this.ventana.getTablero().length; i++) {
			for (int j = 0; j < this.ventana.getTablero()[i].length; j++) {
				if(casilla == this.ventana.getTablero()[i][j]) {
					if (this.modelo.getTablero()[i][j].getPersonaje() != null) {
						JOptionPane.showMessageDialog(null, this.modelo.getTablero()[i][j].toString() + "\n" + this.modelo.getTablero()[i][j].getPersonaje().toString());
					}
				}
			}
		}
		
	}

	@Override
	public void mouseReleased(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseEntered(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseExited(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}
	public DialogoView getVentana() {
		return ventana;
	}
	public void setVentana(DialogoView ventana) {
		this.ventana = ventana;
	}

}