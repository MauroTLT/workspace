package Vista;

import java.io.BufferedReader;
import java.io.IOException;

import javax.swing.BoxLayout;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JScrollPane;

import Controller.FicheroController;

@SuppressWarnings("serial")
public class HistorialView extends JDialog {
	private JScrollPane scroll;
	private JPanel container;
	
	public HistorialView(FicheroController ficheroEntrada) {
		this.scroll = new JScrollPane();
		this.container = new JPanel();
		darFormato(ficheroEntrada);
	}

	private void darFormato(FicheroController ficheroEntrada) {
		String linea = null;
		this.container.setLayout(new BoxLayout(this.container, BoxLayout.Y_AXIS));
		while ((linea = ficheroEntrada.leer()) != null) {
			this.container.add(new JLabel(leer));
		}
		
		
		this.scroll.setViewportView(container);
		this.add(scroll);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setSize(400, 300);
		this.setLocationRelativeTo(null);
		this.setVisible(true);
	}
}
