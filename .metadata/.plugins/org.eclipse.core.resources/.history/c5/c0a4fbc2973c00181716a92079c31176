package Controller;

import javax.swing.ImageIcon;
import javax.swing.JOptionPane;

import Model.Protagonista;
import Model.TableroModel;
import View.BatoiKillerView;

public class BatoiKillerController {

	private TableroModel modelo;
	private BatoiKillerView ventana;
	
	public BatoiKillerController() {
		this.modelo = new TableroModel(JOptionPane.showOptionDialog(null, "Elija la dificultad", "Dificultad", JOptionPane.DEFAULT_OPTION, JOptionPane.QUESTION_MESSAGE, new ImageIcon(getClass().getResource("../resources/extras/sword.gif")), new String[] {"Fácil", "Normal", "Difícil"}, 2));
		Protagonista.setNombre((String) JOptionPane.showInputDialog(null, "Escriba el nombre del Protagonista", "Empieza tu Aventura", JOptionPane.DEFAULT_OPTION, new ImageIcon(getClass().getResource("../resources/sprites/maxim.png")), null, null));
		if(Protagonista.getNombre().equals("")) {
			Protagonista.setNombre("Inútil");
		}
		this.ventana = new BatoiKillerView(modelo);
		System.out.println(Protagonista.getNombre());
	}

	public TableroModel getModelo() {
		return modelo;
	}

	public void setModelo(TableroModel modelo) {
		this.modelo = modelo;
	}

	public BatoiKillerView getVentana() {
		return ventana;
	}

	public void setVentana(BatoiKillerView ventana) {
		this.ventana = ventana;
	}

}
