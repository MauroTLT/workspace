package ejemplo;

import javax.swing.*;

public class Main extends JFrame {
	
	public static void main(String[] args) {
		new Main();
		new Main("Hola Jose");
	}
	// el constuctor
	public Main() {
		setTitle("Hola!!!");
		// Pone un título a la ventana
		setSize(600, 400);
		// método heredado que le da un tamaño a la ventana
		setVisible(true);
	}
	public Main(String mensaje) {
		setTitle(mensaje);
		// Pone un título a la ventana
		setSize(600, 400);
		// método heredado que le da un tamaño a la ventana
		setVisible(true);
	}
}