package View;

import java.awt.Color;
import java.awt.Font;

import javax.swing.ImageIcon;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.SwingConstants;

@SuppressWarnings("serial")
public class TitleView extends JDialog {

	private final Font font = new Font("TimesRoman", Font.BOLD, 28);
	private JLabel titulo, pulsa;
	
	public TitleView() {
		this.titulo = new JLabel();
		this.pulsa = new JLabel("Pulsa cualquier boton para continuar", SwingConstants.CENTER);
		darFormato();
	}

	private void darFormato() {
		JLabel background = new JLabel();
		background.setIcon(new ImageIcon(getClass().getResource("../resources/extras/titlebg2.gif")));
		this.setContentPane(background);
		this.setLayout(null);
		this.titulo.setBounds(120,-120,800,200);
		this.titulo.setIcon(new ImageIcon(getClass().getResource("../resources/extras/title.png")));
		this.add(titulo);
		
		this.pulsa.setBounds(200,550,600,50);
		this.pulsa.setFont(font);
		this.pulsa.setForeground(Color.lightGray);
		this.add(pulsa);
		this.pulsa.setVisible(false);
		
		this.setSize(1000, 750);
		this.setTitle("Batoi Killer");
		this.setLocationRelativeTo(null);
		this.setUndecorated(true);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setVisible(true);
		try {
			Thread.sleep(1000);
			while(this.titulo.getLocation().getY() <= 200) {
				this.titulo.setLocation(120, (int) (this.titulo.getLocation().getY()+5));
				Thread.sleep(45);
			}
			Thread.sleep(2000);
			this.pulsa.setVisible(true);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}

}
