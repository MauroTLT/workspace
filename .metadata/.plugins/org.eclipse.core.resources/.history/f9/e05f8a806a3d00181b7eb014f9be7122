package FireEmblemGraphic;

import java.awt.Color;

import javax.swing.ImageIcon;

public class Main {
	static Jugador j1 = new Jugador("Mauro");
	static Jugador j2 = new Jugador("Topo");
	
	public static void main(String[] args) {
		Main programa = new Main();
		programa.inici();
	}
	
	private void inici() {
		
		espada.setVentaja(hacha);
		espada.setDesventaja(lanza);
		lanza.setDesventaja(hacha);
				
		Personaje p1 = new Volador("Maxim", lanza, 40, 25, 25, t1[0][0]);
		Personaje p2 = new Infanteria("Selan", espada, 40, 30, 20, t1[1][0]);
		Personaje p3 = new Infanteria("Lexis", espada, 50, 40, 5, t1[7][0]);
		Personaje p4 = new Caballeria("Arty", hacha, 45, 30, 15, t1[6][0]);
		j1.aniadir(p1); j1.aniadir(p2); j1.aniadir(p3); j1.aniadir(p4);
		Personaje p5 = new Volador("Dekar", hacha, 40, 20, 25, t1[1][5]);
		Personaje p6 = new Infanteria("Tia", espada, 40, 30, 20, t1[2][5]);
		Personaje p7 = new Infanteria("Guy", lanza, 50, 40, 5, t1[5][5]);
		Personaje p8 = new Caballeria("Alen", espada, 45, 30, 15, t1[6][5]);
		j2.aniadir(p5); j2.aniadir(p6); j2.aniadir(p7); j2.aniadir(p8);
		setImg(t1);
		String[][] content = new String[9][6];
		setContent(content);
		TableroController tablero = new TableroController(t1, content);
		tablero.getVentana().getTitulo().setText("Turno de : " + j1.getNombre());
		
	}

	public void setImg(Casilla[][] t1) {
		t1[0][0].setIcon(new ImageIcon(getClass().getResource("../resources/maxim.png")));
		t1[1][0].setIcon(new ImageIcon(getClass().getResource("../resources/selan.png")));
		t1[7][0].setIcon(new ImageIcon(getClass().getResource("../resources/lexis.png")));
		t1[6][0].setIcon(new ImageIcon(getClass().getResource("../resources/arty.png")));
		t1[1][5].setIcon(new ImageIcon(getClass().getResource("../resources/dekar.png")));
		t1[2][5].setIcon(new ImageIcon(getClass().getResource("../resources/tia.png")));
		t1[5][5].setIcon(new ImageIcon(getClass().getResource("../resources/guy.png")));
		t1[6][5].setIcon(new ImageIcon(getClass().getResource("../resources/alen.png")));
	}
	
	public void setContent(String[][] content) {
		int j = 0;
		int k = 0;
		for (int i = 0; i < content.length; i++) {
			if(i < 4) {
				content[i][0] = j1.getPersonajes()[j].getNombre();
				content[i][1] = j1.getPersonajes()[j].getTipo();
				content[i][2] = j1.getPersonajes()[j].getArma().getNombre();
				content[i][3] = Integer.toString(j1.getPersonajes()[j].getHp());
				content[i][4] = Integer.toString(j1.getPersonajes()[j].getAtk());
				content[i][5] = Integer.toString(j1.getPersonajes()[j].getDef());
				j++;
			} else if(i == 4) {
				content[i][0] = "";
				content[i][1] = "";
				content[i][2] = "";
				content[i][3] = "";
				content[i][4] = "";
				content[i][5] = "";
			} else {
				content[i][0] = j2.getPersonajes()[k].getNombre();
				content[i][1] = j2.getPersonajes()[k].getTipo();
				content[i][2] = j2.getPersonajes()[k].getArma().getNombre();
				content[i][3] = Integer.toString(j2.getPersonajes()[k].getHp());
				content[i][4] = Integer.toString(j2.getPersonajes()[k].getAtk());
				content[i][5] = Integer.toString(j2.getPersonajes()[k].getDef());
				k++;
			}
		}
	}

}
