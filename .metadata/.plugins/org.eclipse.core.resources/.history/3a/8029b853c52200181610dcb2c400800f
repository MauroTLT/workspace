package ejercicio6;

import java.awt.BorderLayout;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.SwingConstants;

@SuppressWarnings("serial")
public class Menu extends JFrame {
	private JLabel cuenta, operar, lista, salir;
	
	public Menu() {
		this.cuenta = new JLabel("Mi Cuenta");
		this.operar = new JLabel("Operar", SwingConstants.LEFT);
		this.lista = new JLabel("Listado Movimientos", SwingConstants.RIGHT);
		this.salir = new JLabel("Salir");
		darFormato();
	}
	
	private void darFormato() {
		this.add(cuenta, BorderLayout.WEST);
		this.add(operar);
		this.add(lista, BorderLayout.CENTER);
		this.add(salir, BorderLayout.EAST);
	}
	
	public static void main(String[] args) {
		Menu frame = new Menu();
		frame.setSize(410, 160);
		frame.setTitle("Menu");
		frame.setLocationRelativeTo(null);
		frame.setVisible(true);
	}

}
