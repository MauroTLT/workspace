package View;

import java.awt.Color;
import java.awt.Font;
import java.awt.Image;

import javax.swing.ButtonGroup;
import javax.swing.ImageIcon;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JRadioButton;
import javax.swing.JTextField;
import javax.swing.SwingConstants;

import resources.RoundButton;

@SuppressWarnings("serial")
public class ElecView extends JDialog{
	
	private final Font font = new Font("TimesRoman", Font.BOLD, 16);
	private JLabel male, female, nombre, img, facil, medio, dificil;
	private JRadioButton facilB, medioB, dificilB;
	private RoundButton cerrar;
	private JTextField nombreTxt;
	
	private int dificultad;
	private String ruta;

	public ElecView() {
		this.nombre = new JLabel("Nombre:");
		this.facil = new JLabel("F á c i l",SwingConstants.CENTER);
		this.medio = new JLabel("N o r m a l",SwingConstants.CENTER);
		this.dificil = new JLabel("D i f í c i l",SwingConstants.CENTER);
		this.facilB = new JRadioButton("",true);
		this.medioB = new JRadioButton();
		this.dificilB = new JRadioButton();
		this.cerrar = new RoundButton("Empezar");
		this.img = new JLabel("",SwingConstants.CENTER);
		this.nombreTxt = new JTextField();
		this.male = new JLabel("",SwingConstants.CENTER);//"♂"
		this.female = new JLabel("",SwingConstants.CENTER);//"♀"
		this.dificultad = 1;
		this.ruta = "../resources/sprites/maxim.png";
		darFormato();
	}

	private void darFormato() {
		ButtonGroup bg = new ButtonGroup();
		bg.add(facilB);
		bg.add(medioB);
		bg.add(dificilB);
		JLabel background = new JLabel();
		background.setIcon(new ImageIcon(getClass().getResource("../resources/extras/elecbg.gif")));
		this.setContentPane(background);
		this.setLayout(null);
		
		this.nombre.setBounds(210,45,175,50);
		this.nombre.setForeground(Color.lightGray);
		this.nombre.setFont(new Font("TimesRoman", Font.BOLD, 32));
		this.add(nombre);
		
		this.nombreTxt.setBounds(380,55,300,40);
		this.nombreTxt.setFont(new Font("TimesRoman", Font.BOLD, 24));
		this.add(nombreTxt);
		
		this.facil.setBounds(785,169,136,20);
		this.facil.setBackground(new Color(0,200,255));
		this.facil.setOpaque(true);
		this.facil.setFont(font);
		this.add(facil);
		
		this.facilB.setBounds(750,169,25,20);
		this.facilB.setBackground(new Color(0,0,0,0));
		this.add(facilB);
		
		this.medio.setBounds(785,215,136,20);
		this.medio.setBackground(new Color(0,200,255));
		this.medio.setOpaque(true);
		this.medio.setFont(font);
		this.add(medio);
		
		this.medioB.setBounds(750,215,25,20);
		this.medioB.setBackground(new Color(0,0,0,0));
		this.add(medioB);
		
		this.dificil.setBounds(785,256,136,20);
		this.dificil.setBackground(new Color(0,200,255));
		this.dificil.setOpaque(true);
		this.dificil.setFont(font);
		this.add(dificil);
		
		this.dificilB.setBounds(750,256,25,20);
		this.dificilB.setBackground(new Color(0,0,0,0));
		this.add(dificilB);
		
		this.img.setBackground(new Color(2,22,38,100));
		this.img.setOpaque(true);
		Image image = new ImageIcon(getClass().getResource("../resources/sprites/maxim.png")).getImage();
	
		this.img.setIcon(new ImageIcon(image.getScaledInstance(200, 200, Image.SCALE_SMOOTH)));
		this.img.setBounds(90, 260, 200, 240);
		this.add(img);
		
		image = new ImageIcon(getClass().getResource("../resources/sprites/maxim.png")).getImage();
		this.male.setIcon(new ImageIcon(image.getScaledInstance(75, 75, Image.SCALE_SMOOTH)));
		this.male.setBounds(295, 312, 130, 75);
		this.male.setBackground(new Color(0,0,0,0));
		this.add(male);
		
		image = new ImageIcon(getClass().getResource("../resources/sprites/selan.png")).getImage();
		this.female.setIcon(new ImageIcon(image.getScaledInstance(40, 40, Image.SCALE_SMOOTH)));
		this.female.setBounds(295, 447, 130, 75);
		this.female.setBackground(new Color(0,0,0,0));
		this.add(female);
		
		this.cerrar.setBounds(550, 325, 100, 100);
	    this.add(cerrar);
	    
	    //this.setModal(true); //No funciona correctamente al ser un Dialog con controlador
		this.setSize(1000, 750);
		this.setTitle("Batoi Killer");
		this.setLocationRelativeTo(null);
		//this.setUndecorated(true);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setVisible(true);
	}

	public JLabel getNombre() {
		return nombre;
	}

	public void setNombre(JLabel nombre) {
		this.nombre = nombre;
	}

	public JTextField getNombreTxt() {
		return nombreTxt;
	}

	public void setNombreTxt(JTextField nombreTxt) {
		this.nombreTxt = nombreTxt;
	}

	public JLabel getMale() {
		return male;
	}

	public void setMale(JLabel male) {
		this.male = male;
	}

	public JLabel getFemale() {
		return female;
	}

	public void setFemale(JLabel female) {
		this.female = female;
	}

	public JLabel getImg() {
		return img;
	}

	public void setImg(JLabel img) {
		this.img = img;
	}

	public JLabel getFacil() {
		return facil;
	}

	public void setFacil(JLabel facil) {
		this.facil = facil;
	}

	public JLabel getMedio() {
		return medio;
	}

	public void setMedio(JLabel medio) {
		this.medio = medio;
	}

	public JLabel getDificil() {
		return dificil;
	}

	public void setDificil(JLabel dificil) {
		this.dificil = dificil;
	}

	public JRadioButton getFacilB() {
		return facilB;
	}

	public void setFacilB(JRadioButton facilB) {
		this.facilB = facilB;
	}

	public JRadioButton getMedioB() {
		return medioB;
	}

	public void setMedioB(JRadioButton medioB) {
		this.medioB = medioB;
	}

	public JRadioButton getDificilB() {
		return dificilB;
	}

	public void setDificilB(JRadioButton dificilB) {
		this.dificilB = dificilB;
	}

	public int getDificultad() {
		return dificultad;
	}

	public void setDificultad(int dificultad) {
		this.dificultad = dificultad;
	}

	public String getRuta() {
		return ruta;
	}

	public void setRuta(String ruta) {
		this.ruta = ruta;
	}

	public RoundButton getCerrar() {
		return cerrar;
	}

	public void setCerrar(RoundButton cerrar) {
		this.cerrar = cerrar;
	}

}
