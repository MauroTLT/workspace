package ejercicio6;

import java.awt.BorderLayout;
import java.awt.Container;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.SwingConstants;

@SuppressWarnings("serial")
public class Menu extends JFrame {
	private JLabel cuenta, operar, lista, salir;
	private Container cuentaC, operarC, listaC, salirC;
	
	public Menu() {
		this.cuentaC = new Container();
		this.operarC = new Container();
		this.listaC = new Container();
		this.salirC = new Container();
		this.cuenta = new JLabel("Mi Cuenta");
		this.operar = new JLabel("Operar");
		this.lista = new JLabel("Listado Movimientos");
		this.salir = new JLabel("Salir");
		darFormato();
	}
	
	private void darFormato() {
		this.cuentaC.add(cuenta, BorderLayout.NORTH);
		this.operarC.add(operar, BorderLayout.NORTH);
		this.listaC.add(lista, BorderLayout.NORTH);
		this.salirC.add(salir, BorderLayout.NORTH);
		this.add(cuentaC);
		this.add(operarC);
		this.add(listaC);
		this.add(salirC);
	}
	
	public static void main(String[] args) {
		Menu frame = new Menu();
		frame.setSize(410, 160);
		frame.setTitle("Menu");
		frame.setLocationRelativeTo(null);
		frame.setVisible(true);
	}

}
