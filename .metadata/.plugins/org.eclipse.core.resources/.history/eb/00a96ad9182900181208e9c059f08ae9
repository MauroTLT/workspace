package model;

import javax.swing.ImageIcon;

public class PlayerModel {
	private PieceModel piezas;
	
	public PlayerModel(ImageIcon image) {
		this.piezas = new PieceModel(image);
		darFormato();
	}

	public ImageIcon getImgPieza() {
		return imgPieza;
	}

	public void setImgPieza(ImageIcon imgPieza) {
		this.imgPieza = imgPieza;
	}

	public PieceModel[] getPiezas() {
		return piezas;
	}

	public void setPiezas(PieceModel[] piezas) {
		this.piezas = piezas;
	}
}