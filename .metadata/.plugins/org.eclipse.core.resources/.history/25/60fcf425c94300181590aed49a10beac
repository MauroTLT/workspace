package View;

import java.awt.Color;
import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.SwingConstants;


@SuppressWarnings("serial")
public class ElecView extends JDialog{
	
	private JLabel male, female, nombre, img, facil, medio, dificil;
	private JTextField nombreTxt;

	public ElecView() {
		this.nombre = new JLabel();
		this.facil = new JLabel("Facil",SwingConstants.CENTER);
		this.medio = new JLabel("Medio",SwingConstants.CENTER);
		this.dificil = new JLabel("Dificil",SwingConstants.CENTER);
		this.img = new JLabel("",SwingConstants.CENTER);
		this.nombreTxt = new JTextField(20);
		this.male = new JLabel("",SwingConstants.CENTER);//"♂"
		this.female = new JLabel("",SwingConstants.CENTER);//"♀"
		darFormato();
	}

	private void darFormato() {
		JLabel background = new JLabel();
		background.setIcon(new ImageIcon(getClass().getResource("../resources/extras/elecbg.gif")));
		this.setContentPane(background);
		this.setLayout(null);
		
		this.facil.setBounds(800,159,100,17);
		this.facil.setBackground(new Color(0,0,100));
		this.facil.setOpaque(true);
		this.add(facil);
		
		this.img.setBackground(new Color(2,22,38,100));
		this.img.setOpaque(true);
		Image maxim = new ImageIcon(getClass().getResource("../resources/sprites/maxim.png")).getImage();
	
		this.img.setIcon(new ImageIcon(maxim.getScaledInstance(200, 200, Image.SCALE_SMOOTH)));
		this.img.setBounds(90, 250, 200, 240);
		this.add(img);
		
		maxim = new ImageIcon(getClass().getResource("../resources/sprites/selan.png")).getImage();
		this.male.setIcon(new ImageIcon(maxim.getScaledInstance(75, 75, Image.SCALE_SMOOTH)));
		this.male.setBounds(295, 297, 130, 75);
		this.male.setBackground(new Color(0,0,0,0));
		this.add(male);
		
		maxim = new ImageIcon(getClass().getResource("../resources/sprites/maxim.png")).getImage();
		this.female.setIcon(new ImageIcon(maxim.getScaledInstance(75, 75, Image.SCALE_SMOOTH)));
		this.female.setBounds(295, 432, 130, 75);
		this.female.setBackground(new Color(0,0,0,0));
		this.add(female);
		
		this.setSize(1000, 750);
		this.setTitle("Batoi Killer");
		this.setLocationRelativeTo(null);
		this.setUndecorated(false);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setVisible(true);
	}

	public JLabel getNombre() {
		return nombre;
	}

	public void setNombre(JLabel nombre) {
		this.nombre = nombre;
	}

	public JTextField getNombreTxt() {
		return nombreTxt;
	}

	public void setNombreTxt(JTextField nombreTxt) {
		this.nombreTxt = nombreTxt;
	}

	public JLabel getMale() {
		return male;
	}

	public void setMale(JLabel male) {
		this.male = male;
	}

	public JLabel getFemale() {
		return female;
	}

	public void setFemale(JLabel female) {
		this.female = female;
	}

}
