package View;

import java.awt.Color;
import java.awt.Cursor;
import java.awt.Font;
import java.awt.Image;
import java.awt.Point;
import java.awt.Toolkit;
import java.util.Vector;

import javax.swing.ImageIcon;
import javax.swing.JDialog;
import javax.swing.JLabel;

@SuppressWarnings("serial")
public class TitleView extends JDialog {

	private final Font font = new Font("TimesRoman", Font.BOLD, 28);
	private JLabel titulo, pulsa, nuevo, salir, lt1, lt2, gt1, gt2;
	
	public TitleView() {
		this.titulo = new JLabel();
		this.nuevo = new JLabel();
		this.salir = new JLabel();
		this.pulsa = new JLabel("Pulsa cualquier boton para continuar");
		this.lt1 = new JLabel();
		this.lt2 = new JLabel();
		this.gt1 = new JLabel();
		this.gt2 = new JLabel();
		darFormato();
	}

	private void darFormato() {
		JLabel background = new JLabel();
		background.setIcon(new ImageIcon(getClass().getResource("../resources/extras/titlebg2.gif")));
		this.setContentPane(background);
		this.setLayout(null);
		this.titulo.setBounds(120,-120,800,200);
		this.titulo.setIcon(new ImageIcon(getClass().getResource("../resources/extras/title.png")));
		this.add(titulo);
		
		this.pulsa.setBounds(200,550,600,50);
		this.pulsa.setFont(font);
		this.pulsa.setForeground(new Color(192, 192, 192, 0));
		this.add(pulsa);
		this.pulsa.setVisible(false);
		
		this.lt1.setBounds(335,485,75,50);
		this.lt1.setIcon(new ImageIcon(getClass().getResource("../resources/extras/arrowLeft.png")));
		this.add(lt1);
		this.lt1.setVisible(false);
		
		this.nuevo.setBounds(375,490,250,50);
		this.nuevo.setIcon(new ImageIcon(getClass().getResource("../resources/extras/juegoNuevo.png")));
		this.add(nuevo);
		this.nuevo.setVisible(false);
		
		this.gt1.setBounds(620,485,75,50);
		this.gt1.setIcon(new ImageIcon(getClass().getResource("../resources/extras/arrowRight.png")));
		this.add(gt1);
		this.gt1.setVisible(false);
		
		this.lt2.setBounds(410,545,75,50);
		this.lt2.setIcon(new ImageIcon(getClass().getResource("../resources/extras/arrowLeft.png")));
		this.add(lt2);
		this.lt2.setVisible(false);
		
		this.salir.setBounds(450,550,100,50);
		this.salir.setIcon(new ImageIcon(getClass().getResource("../resources/extras/salir.png")));
		this.add(salir);
		this.salir.setVisible(false);
		
		this.gt2.setBounds(540,550,75,50);
		this.gt2.setIcon(new ImageIcon(getClass().getResource("../resources/extras/arrowRight.png")));
		this.add(gt2);
		this.gt2.setVisible(false);
		
		
		
		//Toolkit toolkit = Toolkit.getDefaultToolkit();
		//Image image = toolkit.getImage(getClass().getResource("../resources/extras/cursor6.png"));
		//Cursor c = toolkit.createCustomCursor(image.getScaledInstance(40, 55, Image.SCALE_SMOOTH), new Point(this.getX(), this.getY()), "img");
		this.setCursor(Toolkit.getDefaultToolkit().createCustomCursor(
				new ImageIcon(getClass().getResource("../resources/extras/cursor6.png")).getImage(),
				new Point(0,0),"custom cursor"));
		
		this.setSize(1000, 750);
		this.setTitle("Batoi Killer");
		this.setLocationRelativeTo(null);
		this.setUndecorated(true);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setVisible(true);
		
		
	}

	public void crearOpciones() {
		this.nuevo.setVisible(true);
		this.salir.setVisible(true);
		this.lt1.setVisible(true);
		this.gt1.setVisible(true);
	}
	
	public void changeOption(int elec) {
		if(elec == 1) {
			this.lt1.setVisible(false);
			this.gt1.setVisible(false);
			this.lt2.setVisible(true);
			this.gt2.setVisible(true);
		} else if(elec == 2) {
			this.lt2.setVisible(false);
			this.gt2.setVisible(false);
			this.lt1.setVisible(true);
			this.gt1.setVisible(true);
		}
	}

	public JLabel getTitulo() {
		return titulo;
	}

	public void setTitulo(JLabel titulo) {
		this.titulo = titulo;
	}

	public JLabel getPulsa() {
		return pulsa;
	}

	public void setPulsa(JLabel pulsa) {
		this.pulsa = pulsa;
	}

	public JLabel getNuevo() {
		return nuevo;
	}

	public void setNuevo(JLabel nuevo) {
		this.nuevo = nuevo;
	}

	public JLabel getSalir() {
		return salir;
	}

	public void setSalir(JLabel salir) {
		this.salir = salir;
	}

	public JLabel getLt1() {
		return lt1;
	}

	public void setLt1(JLabel lt1) {
		this.lt1 = lt1;
	}

	public JLabel getLt2() {
		return lt2;
	}

	public void setLt2(JLabel lt2) {
		this.lt2 = lt2;
	}

	public JLabel getGt1() {
		return gt1;
	}

	public void setGt1(JLabel gt1) {
		this.gt1 = gt1;
	}

	public JLabel getGt2() {
		return gt2;
	}

	public void setGt2(JLabel gt2) {
		this.gt2 = gt2;
	}

}
