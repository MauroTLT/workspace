package View;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.Font;
import java.awt.GridLayout;
import java.util.ArrayList;

import javax.swing.BorderFactory;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.SwingConstants;

@SuppressWarnings("serial")
public class PuntosView extends JDialog {

	private final Font font = new Font("Tahoma", Font.BOLD, 18);
	private JLabel titulo;
	private JPanel panel;
	
	public PuntosView(ArrayList<Integer> array) {
		this.titulo = new JLabel("Mejores Puntuaciones", SwingConstants.CENTER);
		this.panel = new JPanel();
		darFormato(array);
	}

	private void darFormato(ArrayList<String> array) {
		this.titulo.setPreferredSize(new Dimension(500,100));
		this.titulo.setFont(font);
		this.titulo.setBackground(Color.LIGHT_GRAY);
		this.titulo.setOpaque(true);
		this.add(titulo, BorderLayout.NORTH);
		this.panel.setLayout(new GridLayout(10,1));
		for (int i = 0; i < array.size() && i < 10; i++) {
			JLabel label = new JLabel(""+array.get(i), SwingConstants.CENTER);
			label.setFont(font);
			label.setBorder(BorderFactory.createLoweredBevelBorder());
			label.setBackground(new Color(240,125,i*20));
			label.setOpaque(true);
			this.panel.add(label);
		}
		this.add(panel, BorderLayout.CENTER);
		
		this.setModal(true);
		this.setTitle("Mejores Puntuaciones");
		this.setSize(500, 690);
		this.setLocationRelativeTo(null);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setVisible(true);
	}
}
