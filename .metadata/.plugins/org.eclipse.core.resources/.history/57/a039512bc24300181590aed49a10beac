package View;

import java.awt.Color;
import java.awt.Font;
import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.SwingConstants;


@SuppressWarnings("serial")
public class ElecView extends JDialog{
	
	private JLabel imgMale, imgFemale, nombre, aux;
	private JTextField nombreTxt;
	private JButton male, female;

	public ElecView() {
		this.imgMale = new JLabel();
		this.imgFemale = new JLabel();
		this.nombre = new JLabel();
		this.aux = new JLabel("",SwingConstants.CENTER);
		this.nombreTxt = new JTextField(20);
		this.male = new JButton("♂");
		this.female = new JButton("♀");
		darFormato();
	}

	private void darFormato() {
		JLabel background = new JLabel();
		background.setIcon(new ImageIcon(getClass().getResource("../resources/extras/elecbg.gif")));
		this.setContentPane(background);
		this.setLayout(null);
		
		this.aux.setBackground(new Color(2,22,38));
		this.aux.setOpaque(true);
		Image maxim = new ImageIcon(getClass().getResource("../resources/sprites/maxim.png")).getImage();
	
		this.aux.setIcon(new ImageIcon(maxim.getScaledInstance(100, 100, Image.SCALE_SMOOTH)));
		this.aux.setBounds(125, 125, 165, 150);
		this.add(aux);
		
		this.male.setBounds(280, 350, 100, 25);
		this.male.setFont(new Font("Tahoma", Font.BOLD, 18));
		this.add(male);
		
		this.female.setBounds(215, 275, 50, 50);
		this.female.setFont(new Font("Tahoma", Font.BOLD, 22));
		this.add(female);
		
		this.setSize(1000, 750);
		this.setTitle("Batoi Killer");
		this.setLocationRelativeTo(null);
		this.setUndecorated(false);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setVisible(true);
	}

	public JLabel getImgMale() {
		return imgMale;
	}

	public void setImgMale(JLabel imgMale) {
		this.imgMale = imgMale;
	}

	public JLabel getImgFemale() {
		return imgFemale;
	}

	public void setImgFemale(JLabel imgFemale) {
		this.imgFemale = imgFemale;
	}

	public JLabel getNombre() {
		return nombre;
	}

	public void setNombre(JLabel nombre) {
		this.nombre = nombre;
	}

	public JTextField getNombreTxt() {
		return nombreTxt;
	}

	public void setNombreTxt(JTextField nombreTxt) {
		this.nombreTxt = nombreTxt;
	}

	public JButton getMale() {
		return male;
	}

	public void setMale(JButton male) {
		this.male = male;
	}

	public JButton getFemale() {
		return female;
	}

	public void setFemale(JButton female) {
		this.female = female;
	}

}
