import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class updateTable {

	public static void main(String[] args) {
		conexionBase conexion = new conexionBase();
		Connection connect = conexion.conectar();
		
		Statement stmt;
		ResultSet result;
		try {
			stmt = connect.createStatement();
		
			result = stmt.executeQuery("select * from Alumnos");
			
			while(result.next()) {
				System.out.print(result.getInt("id")+" ");
				System.out.print(result.getString("nombre")+" ");
				System.out.print(result.getString("sexo")+" ");
				System.out.print(result.getString("date")+" ");
				System.out.println();
			}
			
			stmt.executeUpdate("UPDATE FROM m_pruebas.Alumnos SET Alumnos.sexo = 'M' WHERE Alumnos.id = 2");
			
			result = stmt.executeQuery("select * from Alumnos");
			
			while(result.next()) {
				System.out.print(result.getInt("id")+" ");
				System.out.print(result.getString("nombre")+" ");
				System.out.print(result.getString("sexo")+" ");
				System.out.print(result.getString("date")+" ");
				System.out.println();
			}
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
	}

}
