package ejercicio6;

import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class EventListener implements ActionListener {
	private Menu ventana;
	
	public EventListener(Menu ventana) {
		this.ventana = ventana;
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		this.ventana.getPanelC().setVisible(false);
		this.ventana.getPanelL().setVisible(false);
		this.ventana.getPanelS().setVisible(false);
		this.ventana.getPanelCC().setVisible(false);
		this.ventana.getPanelCV().setVisible(false);
		if(e.getSource() == this.ventana.getCuenta()) {
			this.ventana.remove(this.ventana.getPanelC());
			this.ventana.add(this.ventana.getPanelC());
			this.ventana.getPanelC().setVisible(true);
			this.ventana.getTxt2().setText("Estas en " + this.ventana.getCuenta().getText());
		} else if(e.getSource() == this.ventana.getLista()) {
			this.ventana.remove(this.ventana.getPanelL());
			this.ventana.add(this.ventana.getPanelL());
			this.ventana.getPanelL().setVisible(true);
			this.ventana.getTxt3().setText("Estas en " + this.ventana.getLista().getText());
		} else if(e.getSource() == this.ventana.getSalir()) {
			this.ventana.remove(this.ventana.getPanelS());
			this.ventana.add(this.ventana.getPanelS());
			this.ventana.getPanelS().setVisible(true);
			this.ventana.getTxt().setText("Estas en " + this.ventana.getSalir().getText());
		} else if(e.getSource() == this.ventana.getComprar()) {
			this.ventana.remove(this.ventana.getPanelCC());
			this.ventana.add(this.ventana.getPanelCC());
			this.ventana.getPanelCC().setVisible(true);
			this.ventana.getTxt4().setText("Estas en " + this.ventana.getComprar().getText());
		} else if(e.getSource() == this.ventana.getVender()) {
			this.ventana.remove(this.ventana.getPanelCV());
			this.ventana.add(this.ventana.getPanelCV());
			this.ventana.getPanelCV().setVisible(true);
			this.ventana.getTxt5().setText("Estas en " + this.ventana.getVender().getText());
		}
	}

}
